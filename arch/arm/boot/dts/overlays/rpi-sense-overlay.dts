// rpi-sense HAT
/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			sensehat@46 {
				compatible = "raspberrypi,sensehat";
				reg = <0x46>;
				interrupt-parent = <&gpio>;
				status = "okay";

				display {
					compatible = "raspberrypi,rpi-sense-fb";
					status = "okay";
				};
				joystick {
					compatible = "raspberrypi,sensehat-joystick";
					interrupts = <23 1>;
					pinctrl-names = "default";
					pinctrl-0 = <&sensehat_pins>;
					status = "okay";
				};
			};

			lsm9ds1-magn@1c {
				compatible = "st,lsm9ds1-magn";
				reg = <0x1c>;
				status = "okay";
			};

			lsm9ds1-accel6a {
				compatible = "st,lsm9ds1-accel";
				reg = <0x6a>;
				status = "okay";
			};

			lps25h-press@5c {
				compatible = "st,lps25h-press";
				reg = <0x5c>;
				status = "okay";
			};

			hts221-humid@5f {
				compatible = "st,hts221-humid", "st,hts221";
				reg = <0x5f>;
				status = "okay";
			};
		};
	};

	fragment@1 {
		target = <&gpio>;
		__overlay__ {
			sensehat_pins: sensehat_pins {
				brcm,pins = <23>;
				brcm,function = <0>;
			};
		};
	};
};
