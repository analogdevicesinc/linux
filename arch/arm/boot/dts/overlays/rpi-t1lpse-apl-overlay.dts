/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/net/pse-pd/adi,ltc4296.h>

/ {
	compatible = "brcm,bcm2711", "brcm,bcm2712";
};

&spidev0 {
	status = "disabled";
};

&spidev1 {
	status = "disabled";
};

&gpio {
	spi1_pinctrl: spi1_pinctrl {
		brcm,pins = <19 20 21>;
		brcm,function = <3>;
	};

	spi1_cs_pinctrl: spi1_cs_pinctrl {
		brcm,pins = <16>;
		brcm,function = <1>; /* output */
	};
};

&spi0 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	ethernet@0 {
		compatible = "adi,adin2111";
		reg = <0>;
		spi-max-frequency = <25000000>;

		#address-cells = <1>;
		#size-cells = <0>;

		interrupt-parent = <&gpio>;
		interrupts = <25 IRQ_TYPE_LEVEL_LOW>;

		adi,spi-crc;

		phy@0 {
			compatible = "ethernet-phy-id0283.bca1";
			reg = <0x0>;
		};

		phy@1 {
			compatible = "ethernet-phy-id0283.bca1";
			reg = <0x1>;
		};
	};
};

// &spi6_cs_pins {
// 	brcm,pins = <16>;
// 	brcm,function = <1>; /* output */
// };

&spi1 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pinctrl>, <&spi1_cs_pinctrl>;
	cs-gpios = <&gpio 16 1>;

	ltc4296: ltc4296@0 {
		compatible = "adi,ltc4296";
		reg = <0>;

		spi-max-frequency = <500000>;

		ports {
			port@2 {
				reg = <0x2>;
				adi,port-type = <LTC4296_PORT_APL>;
				adi,sccpo-gpio = <&gpio 23 GPIO_ACTIVE_HIGH>;
				adi,sccpi-gpio = <&gpio 22 GPIO_ACTIVE_HIGH>;
				adi,hs-resistor = <250>;
			};

			port@3 {
				reg = <0x3>;
				adi,port-type = <LTC4296_PORT_APL>;
				adi,sccpo-gpio = <&gpio 18 GPIO_ACTIVE_HIGH>;
				adi,sccpi-gpio = <&gpio 17 GPIO_ACTIVE_HIGH>;
				adi,hs-resistor = <250>;
			};
		};
	};
};
