/*
 * Devicetree overlay for Analog Devices EVAL-AD7606C18FMCZ
 * used with HDL project:
 * https://analogdevicesinc.github.io/hdl/projects/ad7606x_fmc/index.html
 */

/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/irq.h>

&{/} {
	eval_u1: eval-u1-regulator {
		compatible = "regulator-fixed";
		regulator-name = "EVAL board ADR4525BRZ (U1)";
		regulator-min-microvolt = <2500000>;
		regulator-max-microvolt = <2500000>;
		regulator-always-on;
	};

	eval_u2: eval-u2-regulator {
		compatible = "regulator-fixed";
		regulator-name = "EVAL board ADP7118ACPZN5.0 (U2)";
		regulator-always-on;
	};

	eval_u3: eval-u3-regulator {
		compatible = "regulator-fixed";
		regulator-name = "EVAL board ADP7118ACPZN3.3 (U3)";
		regulator-always-on;
	};
};

&amba {
	adc_trigger: pwm@44b00000 {
		compatible = "adi,axi-pwmgen-2.00.a";
		reg = <0x44b00000 0x1000>;
		#pwm-cells = <3>;
		clocks = <&clkc 15>;
		clock-names = "axi";
	};

	rx_dma: dma-controller@44a30000 {
		compatible = "adi,axi-dmac-1.00.a";
		reg = <0x44a30000 0x1000>;
		#dma-cells = <1>;
		interrupts = <0 57 IRQ_TYPE_LEVEL_HIGH>;
		clocks = <&clkc 15>;
	};

	axi_adc: parallel-bus-controller@44a00000 {
		compatible = "adi,axi-ad7606x";
		reg = <0x44a00000 0x1000>;
		dmas = <&rx_dma 0>;
		dma-names = "rx";
		clocks = <&clkc 15>;
		#io-backend-cells = <0>;

		#address-cells = <1>;
		#size-cells = <0>;

		eval_adc: adc@0 {
			compatible = "adi,ad7606c-18";
			reg = <0>;
			io-backends = <&axi_adc>;

			avcc-supply = <&eval_u2>;
			vdrive-supply = <&eval_u3>;

			#trigger-source-cells = <1>;

			pwms = <&adc_trigger 0 100000 0>;

			reset-gpios = <&gpio0 91 GPIO_ACTIVE_HIGH>;
			standby-gpios = <&gpio0 90 GPIO_ACTIVE_LOW>;
			adi,range-gpios = <&gpio0 89 GPIO_ACTIVE_HIGH>;
			adi,oversampling-ratio-gpios = <&gpio0 88 GPIO_ACTIVE_HIGH
							&gpio0 87 GPIO_ACTIVE_HIGH
							&gpio0 86 GPIO_ACTIVE_HIGH>;
			adi,sw-mode;

			channel@1 {
				reg = <1>;
				diff-channels = <1 1>;
				bipolar;
			};

			channel@2 {
				reg = <2>;
				diff-channels = <2 2>;
				bipolar;
			};

			channel@3 {
				reg = <3>;
				diff-channels = <3 3>;
				bipolar;
			};

			channel@4 {
				reg = <4>;
				diff-channels = <4 4>;
				bipolar;
			};

			channel@5 {
				reg = <5>;
				diff-channels = <5 5>;
				bipolar;
			};

			channel@6 {
				reg = <6>;
				diff-channels = <6 6>;
				bipolar;
			};

			channel@7 {
				reg = <7>;
				diff-channels = <7 7>;
				bipolar;
			};

			channel@8 {
				reg = <8>;
				diff-channels = <8 8>;
				bipolar;
			};
		};
	};
};

&gpio0 {
	adc-serpar {
		gpio-hog;
		gpios = <93 GPIO_ACTIVE_HIGH>;
		output-low;
	};
};
