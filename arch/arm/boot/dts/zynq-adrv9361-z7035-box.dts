/dts-v1/;
/include/ "zynq-adrv9361-z7035.dtsi"
#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/irq.h>

&adm1166 {
	reg = <0x6A>;
};

&axi_i2c0 {
	ad7291-ccbox@2f {
		compatible = "adi,ad7291";
		reg = <0x2f>;
	};

	eeprom@50 {
		compatible = "at24,24c32";
		reg = <0x50>;
	};

	adau1761: adau1761@3a {
		compatible = "adi,adau1761";
		reg = <0x3a>;

		clocks = <&audio_clock>;
		clock-names = "mclk";

		#sound-dai-cells = <0>;
	};

	ts3a227e@3b {
		compatible = "ti,ts3a227e";
		reg = <0x3b>;
		interrupt-parent = <&gpio0>;
		//interrupts = <75 IRQ_TYPE_LEVEL_LOW>;
	};

	rtc@68 {
		compatible = "dallas,ds3232";
		reg = <0x68>;
	};
};

/ {
	leds {
		compatible = "gpio-leds";
		led0 {
			label = "led0:red";
			gpios = <&gpio0 56 0>;
			linux,default-trigger = "heartbeat";
			};

		led1 {
			label = "led1:green";
			gpios = <&gpio0 55 0>;
			linux,default-trigger = "heartbeat";
		};

		led2 {
			label = "led2:blue";
			gpios = <&gpio0 54 0>;
			linux,default-trigger = "heartbeat";
		};
	};

	gpio-keys {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "gpio-keys";

		power {
			interrupt-parent = <&gpio0>;
			interrupts = <76 IRQ_TYPE_EDGE_FALLING>;

			label = "Power";
			//gpios = <&gpio0 76 GPIO_ACTIVE_LOW>;

			linux,code = <KEY_POWER>;
			gpio-key,wakeup;
		};
	};

	poweroff {
		compatible = "gpio-poweroff";
		gpios = <&gpio0 77 GPIO_ACTIVE_LOW>;
	};
};

&gpio0 {
	imu_rstn {
		gpio-hog;
		gpios = <63 0>;
		output-high;
		line-name = "imu_rstn";
	};

	gps_reset0 {
		gpio-hog;
		gpios = <60 0>;
		output-high;
		line-name = "gps_reset";
	};

	gps_force_on {
		gpio-hog;
		gpios = <59 0>;
		input;
		line-name = "gps_force_on";
	};

	gps_standby {
		gpio-hog;
		gpios = <58 0>;
		input;
		line-name = "gps_standby";
	};
};

 /* Display:
  * NHD-1.69-160128UGC3 (Newhaven Display International, Inc.)
  */

&spi0 {
	status = "okay";

	nhd@0{
		compatible = "syncoam,seps525";
		reg = <1>;
		status = "ok";

		spi-max-frequency = <10000000>;
		spi-cpol;
		spi-cpha;
		rotate = <0>;
		fps = <50>;
		buswidth = <8>;
		txbuflen = <64000>;
		reset-gpios = <&gpio0 64 0>;
		dc-gpios = <&gpio0 65 0>;
		debug = <0>;
	};
};

&spi1 {
	status = "okay";
	num-cs = <4>;
	is-decoded-cs = <0>;

	adis16460@0{
		compatible = "adi,adis16445";
		reg = <0>;
		status = "ok";

		spi-max-frequency = <2000000>;
		spi-cpol;
		spi-cpha;
	};
};

&usb0 {
	status = "okay";
	dr_mode = "otg";
};

&uart0 {
	status = "okay";
};

&aliases {
	serial1 = &uart0;
};

&fpga_axi {
		audio_clock: audio_clock {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};

		axi_i2s_0: axi-i2s@0x77600000 {
			compatible = "adi,axi-i2s-1.00.a";
			reg = <0x77600000 0x1000>;
			dmas = <&dmac_s 0 &dmac_s 1>;
			dma-names = "tx", "rx";
			clocks = <&clkc 15>, <&audio_clock>;
			clock-names = "axi", "ref";

			#sound-dai-cells = <0>;
		};

		pzsdr_sound {
			compatible = "simple-audio-card";
			simple-audio-card,name = "ADRV9361-Z7035 ADAU1761";
			simple-audio-card,widgets =
				"Microphone", "Mic In",
				"Headphone", "Headphone Out";
			simple-audio-card,routing =
				"Headphone Out", "LHP",
				"Headphone Out", "RHP",
				"Mic In", "MICBIAS",
				"LINN", "Mic In";
			simple-audio-card,dai-link@0 {
				format = "i2s";
				cpu {
					sound-dai = <&axi_i2s_0>;
					frame-master;
					bitclock-master;
				};
				codec {
					sound-dai = <&adau1761>;
				};
			};
		};
};
