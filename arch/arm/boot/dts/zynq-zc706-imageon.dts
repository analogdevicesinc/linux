/dts-v1/;

/include/ "zynq-zc706.dtsi"

/ {
	fpga_axi: fpga-axi@0 {
		compatible = "simple-bus";
		#address-cells = <0x1>;
		#size-cells = <0x1>;
		ranges;

		axi_iic_imageon: i2c@43c40000 {
			compatible = "xlnx,axi-iic-1.02.a", "xlnx,xps-iic-2.00.a";
			interrupt-parent = <&gic>;
			interrupts = <0 55 4>;
			reg = <0x43c40000 0x10000>;
			bus-id = <1>;
			#size-cells = <0>;
			#address-cells = <1>;

			mux@70 {
				compatible = "nxp,pca9546";
				reg = <0x70>;
				reset-gpio = <&gpio 87 1>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c@1 {
					#size-cells = <0>;
					#address-cells = <1>;
					reg = <1>;

					adv7511: adv7511@39 {
						compatible = "adi,adv7511";
						reg = <0x39>;

						adi,input-style = <0x02>;
						adi,input-id = <0x02>;
						adi,input-color-depth = <0x3>;
						adi,sync-pulse = <0x03>;
						adi,bit-justification = <0x02>;
						adi,up-conversion = <0x00>;
						adi,timing-generation-sequence = <0x00>;
						adi,vsync-polarity = <0x02>;
						adi,hsync-polarity = <0x02>;
						adi,tdms-clock-inversion;
						adi,clock-delay = <0x03>;
						gpios = <&pca9534 4 0>;
					};
				};

				i2c@2 { 
					#size-cells = <0>;
					#address-cells = <1>;
					reg = <2>;

					adv7611@4c {
						compatible = "adi,adv7611";
						reg = <0x4c>;
						#address-cells = <0x1>;
						#size-cells = <0x0>;
						reset-gpios = <&pca9534 0 0>;
						interrupt-parent = <&gpio>;
						interrupts = <86 4>;

						port@0 {
							reg = <0x0>;
						};

						port@1 {
							reg = <0x1>;

							adv7611: endpoint {
								bus-width = <16>;
								remote-endpoint = <&axi_hdmi_rx>;
							};
						};
					};
				};

				i2c@3 {
					#size-cells = <0>;
					#address-cells = <1>;
					reg = <3>;

					pca9534: pca9534@20 {
						compatible = "nxp,pca9534";
						reg = <0x20>;
						gpio-controller;
						#gpio-cells = <2>;
					};
				};
			};
		};

		axi_hdmi_dma: axi-vdma@43000000 {
			#address-cells = <1>;
			#size-cells = <1>;
			#dma-cells = <1>;
			compatible = "xlnx,axi-vdma";
			reg = <0x43000000 0x10000>;
			xlnx,include-sg = <0x0>;
			xlnx,num-fstores = <0x3>;
			dma-channel@43000000 {
				compatible = "xlnx,axi-vdma-mm2s-channel";
				interrupts = <0 59 0x4>;
				xlnx,datawidth = <0x40>;
				xlnx,genlock-mode = <0x0>;
				xlnx,include-dre = <0x0>;
			};
		};

		axi_hdmi_clkgen: axi-clkgen@79000000 {
			compatible = "adi,axi-clkgen-2.00.a";
			reg = <0x79000000 0x10000>;
			#clock-cells = <0>;
			clocks = <&clkc 16>;
		};

		axi_hdmi_core: axi-hdmi-tx@70e00000 {
			compatible = "adi,axi-hdmi-tx-1.00.a";
			reg = <0x70e00000 0x10000>;
			encoder-slave = <&adv7511>;
			dmas = <&axi_hdmi_dma 0>;
			dma-names = "video";
			clocks = <&axi_hdmi_clkgen>;
			adi,embedded-sync;
		};

		audio_clock: audio_clock {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};

		axi_spdif_tx_0: axi-spdif-tx@0x75c00000 {
			compatible = "adi,axi-spdif-tx-1.00.a";
			reg = <0x75c00000 0x1000>;
			dmas = <&ps7_dma 0>;
			dma-names = "tx";
			clocks = <&clkc 15>, <&audio_clock>, <&audio_clock>;
			clock-names = "axi", "ref", "spdif";
		};

		adv7511_hdmi_snd: adv7511_hdmi_snd {
			compatible = "adv7511-hdmi-snd";
			audio-codec = <&adv7511>;
			cpu-dai = <&axi_spdif_tx_0>;
		};

		axi_hdmi_rx_core: axi-hdmi-rx@43100000 {
			compatible = "adi,axi-hdmi-rx-1.00.a";
			reg = <0x43100000 0x10000>;
			dmas = <&axi_dmac 0>;
			dma-names = "rx";
			gpios = <&pca9534 2 0>;

			port {
				#address-cells = <0>;
				#size-cells = <0>;

				axi_hdmi_rx: endpoint {
					remote-endpoint = <&adv7611>;
				};
			};
		};

		axi_dmac: dmac@43c20000 {
			compatible = "adi,axi-dmac-1.00.a";
			reg = <0x43c20000 0x10000>;
			#dma-cells = <1>;
			interrupts = <0 56 0>;
			clocks = <&clkc 16>;

			dma-channel {
				adi,buswidth = <64>;
				adi,type = <0>;
			};
		};

	};
};

&usb {
	dr_mode = "host";
};
