			xen,passthrough;
		};
		encoder_reserved@0x94400000 {
			no-map;
			reg = <0 0x94400000 0 0x800000>;
			xen,passthrough;
		};
		ts_boot@0x95000000 {
			no-map;
			reg = <0 0x95000000 0 0x400000>;
			xen,passthrough;
		};
	};
