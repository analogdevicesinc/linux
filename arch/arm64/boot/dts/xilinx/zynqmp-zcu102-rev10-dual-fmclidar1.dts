			clocks = <&clk 71>, <&clk 71>;
			fifo-size = <16>;
			interrupt-names = "ip2intc_irpt";
			interrupt-parent = <&gic>;
			interrupts = <0 105 1>;
			num-cs = <0x1>;
			xlnx,num-ss-bits = <0x1>;
			xlnx,spi-mode = <0>;
			#address-cells = <1>;
			#size-cells = <0>;
