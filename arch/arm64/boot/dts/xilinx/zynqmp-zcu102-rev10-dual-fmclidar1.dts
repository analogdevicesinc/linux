			#address-cells = <1>;
			#size-cells = <0>;
		};

		axi_spi_clkgen_b: axi_quad_spi@9d500000 {
			reg = <0x9d500000 0x10000>;
			compatible = "xlnx,xps-spi-2.00.a";
			bits-per-word = <8>;
			clock-names = "ext_spi_clk", "s_axi_aclk";
