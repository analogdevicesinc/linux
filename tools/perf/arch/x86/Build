perf-y += util/
perf-y += tests/

ifdef SHELLCHECK
  SHELL_TESTS := entry/syscalls/syscalltbl.sh
  TEST_LOGS := $(SHELL_TESTS:%=%.shellcheck_log)
else
  SHELL_TESTS :=
  TEST_LOGS :=
endif

$(OUTPUT)%.shellcheck_log: %
	$(call rule_mkdir)
	$(Q)$(call echo-cmd,test)shellcheck -a -S warning "$<" > $@ || (cat $@ && rm $@ && false)

perf-y += $(TEST_LOGS)
